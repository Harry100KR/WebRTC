{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "node_modules/**"]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/dist/index.js"
    },
    {
       "src": "/static/(.*)",
       "dest": "/client/build/static/$1"
    },
    {
       "src": "/(.*)",
       "dest": "/client/build/index.html"
    }
  ]
} 